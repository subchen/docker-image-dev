global_defs {
  router_id LVS_DEVEL
}
vrrp_script haproxy_check {
  script "/etc/keepalived/haproxy-check.sh"
  interval 2
  weight 2
}
vrrp_instance VI_1 {
  state {{state}}
  interface eth0
  virtual_router_id 51
  priority {{priority}}

  unicast_src_ip {{src}}

  unicast_peer {
    {{peer}}
  }

  track_script {
    haproxy_check
  }

  virtual_ipaddress {
    {{vip}}
  }

  authentication {
    auth_type PASS
    auth_pass secret
  }
}

